<section id="contact">

  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Contact Us</h2>
        <!-- <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3> -->
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
          <div id="contactForm" name="sentMessage" novalidate="novalidate" >

          <%= form_for @contact do |f| %>

          <div class="row">

            <div class="col-md-6">

              <div class="form-group">
                <%= f.text_field :name, class:'form-control', autofocus: true, placeholder:"Your Name *",required: "required" %>
                <p class="help-block text-danger"></p>
              </div>

              <div class="form-group">
                <%= f.email_field :email, class:"form-control", placeholder: "Your Email *" ,  required:"required"%>
                <p class="help-block text-danger"></p>
              </div>

              <div class="form-group">
                  <%= f.phone_field :phone, class:"form-control", placeholder: "Your Phone *" ,  required:"required"%>
                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                  <%= f.text_area :message , class:"form-control", placeholder: "Your Message *" ,  required:"required"%>
                <p class="help-block text-danger"></p>
              </div>
            </div>

            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Send Message</button>
            </div>

            </div>
  <% end %>
</div>
          </div>
      </div>
    </div>
</section>




